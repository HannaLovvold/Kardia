# REST API Configuration
# These settings control the REST API for external access (phone apps, etc.)

# Port for the REST API server
API_SERVER_PORT=5000

# Bearer token for API authentication
# Change this to a secure random string for production
API_BEARER_TOKEN=your-secret-token-here

# AI Backend Configuration
# Choose: ollama, openai, groq, deepseek, together, openrouter, custom
AI_BACKEND=groq

# For OpenAI-compatible APIs (Groq, OpenAI, DeepSeek, Together, OpenRouter, etc.)
API_KEY=gsk_your_api_key_here
API_URL=https://api.groq.com/openai/v1
API_MODEL=llama-3.3-70b-versatile

# Additional API parameters (JSON format, optional)
API_PARAMS={"thinking": {"type": "enabled", "clear_thinking": "true"}, "do_sample": "true"}

# For Ollama (local, free)
# OLLAMA_URL=http://localhost:11434
# OLLAMA_MODEL=mistral
